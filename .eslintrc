{
  "root" : true,
  "parser" : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "parserOptions" : {
    "sourceType" : "module"
  },
  "plugins" : [
    "react",
    "babel",
    "html"
  ],
  "env" : {
    "browser" : true
  },
  "rules" : {
    "semi" : [2,"always"],
    "space-before-function-paren" : [0, "always"]
  }
}
